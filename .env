# .env - Placeholders only; safe to commit as long as no real secrets are present.
# Real secret values must be injected at runtime and .env should be in .gitignore for deployments.

# Core Application Settings
KAFKA_TOPIC=social_media_posts
SOCIAL_MEDIA_BEARER_TOKEN=${SOCIAL_MEDIA_BEARER_TOKEN}
LOG_LEVEL=INFO

# ZooKeeper Configuration (TLS + Auth)
ZOOKEEPER_TLS_ENABLED=true
ZOOKEEPER_TLS_KEYSTORE_PATH=/etc/zookeeper/secrets/keystore.jks
ZOOKEEPER_TLS_TRUSTSTORE_PATH=/etc/zookeeper/secrets/truststore.jks
ZOOKEEPER_ALLOW_ANONYMOUS_LOGIN=no
ZOO_ENABLE_AUTH=yes
ZOO_SERVER_USERS=${ZOOKEEPER_USER}
ZOO_SERVER_PASSWORDS=${ZOOKEEPER_PASSWORD}

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_INTERNAL_PORT=9093
KAFKA_EXTERNAL_PORT=29093
ALLOW_PLAINTEXT_LISTENER=no
KAFKA_AUTO_CREATE_TOPICS=${KAFKA_AUTO_CREATE_TOPICS}
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_ENABLED_MECHANISMS=PLAIN
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_JAAS_CONFIG=${KAFKA_JAAS_CONFIG}

# Kafka Client Credentials
KAFKA_CLIENT_USER=${KAFKA_CLIENT_USER}
KAFKA_CLIENT_PASSWORD=${KAFKA_CLIENT_PASSWORD}
KAFKA_SSL_KEYSTORE_PASSWORD=${KAKFA_SSL_KEYSTORE_PASSWORD}
KAFKA_SSL_TRUSTSTORE_PASSWORD=${KAFKA_SSL_TRUSTSTORE_PASSWORD}

# Spark Configuration
SPARK_MASTER_UI_PORT=8080
SPARK_MASTER_PORT=7077
SPARK_WORKER_MEMORY=2G
SPARK_WORKER_CORES=2
SPARK_AUTH_ENABLED=true
SPARK_ENCRYPTION_ENABLED=true
SPARK_STORAGE_ENCRYPTION_ENABLED=true
SPARK_SSL_ENABLED=true
SPARK_SSL_KEYSTORE=/etc/spark/secrets/keystore.jks
SPARK_SSL_TRUSTSTORE=/etc/spark/secrets/truststore.jks

# MinIO Configuration
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=https://minio:9000

# Delta Lake Configuration
DELTA_LAKE_CHECKPOINT_PATH=/data/checkpoints
DELTA_LAKE_TABLE_PATH=/data/delta/sentiment

# ML API Configuration
# External access via TLS proxy on port 443
ML_API_PORT=5000
ML_API_REPLICAS=3
ML_API_KEY=${ML_API_KEY}
ML_API_LOAD_BALANCER_PORT=443

# Dashboard Configuration
DASHBOARD_PORT=8050

# Monitoring Configuration
# External access via TLS proxy on port 443\PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GF_SECURITY_ADMIN_USER=${GRAFANA_ADMIN_USER}
GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}

